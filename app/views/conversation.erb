<% @display_text = @participants.clone %>
<% @display_text.gsub!(/#{@tweets.first.user.username}/, "<a href=\"/#{@tweets.first.user.username}\">@#{@tweets.first.user.username}</a>") %>
<% @tweets.first.mentions.each do |mention| %>
  <% @display_text.gsub!(/#{mention.name}/, "<a href=\"/#{mention.name[1..-1]}\">#{mention.name}</a>") %>
<% end %>

<h3>Conversation between <%= @display_text.gsub(/\s<a/, ', <a') %> </h3>
<%= erb :_display_tweets %>
<%= erb :_compose_reply %>
<%= erb :_display_replies %>
